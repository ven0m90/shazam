#!/bin/bash
#tools-install
# ----------------------------------
# Colors
# ----------------------------------
NOCOLOR='\033[0m'             # No Color
RED='\033[0;31m'
GREEN='\033[0;32m'
ORANGE='\033[0;33m'
BLUE='\033[0;34m'
PURPLE='\033[0;35m'
CYAN='\033[0;36m'
LIGHTGRAY='\033[0;37m'
DARKGRAY='\033[1;30m'
LIGHTRED='\033[1;31m'
LIGHTGREEN='\033[1;32m'
YELLOW='\033[1;33m'
LIGHTBLUE='\033[1;34m'
LIGHTPURPLE='\033[1;35m'
LIGHTCYAN='\033[1;36m'
WHITE='\033[1;37m'
CG='\033[1;38;5;087m'
CP='\033[1;38;5;221m'
CPO='\033[1;38;5;205m'
CN='\033[1;38;5;247m'
CNC='\033[1;38;5;051m'



Installing_dependencies (){
#Check Operating System

    echo -e ${YELLOW}"[+]Checking For Operating System\n"
	#Check Operating System
	OS=$(lsb_release -i 2> /dev/null | sed 's/:\t/:/' | cut -d ':' -f 2-)
	if [ "$OS" == "Debian" ] || [ "$OS" == "Linuxmint" ]; then
		#Specific Debian
		echo -e "\033[34m[+]Installing dependencies.. For $OS \033[m"

	    sudo apt update  ; sudo apt clean ; sudo apt autoclean ; sudo apt upgrade -y ; sudo apt autoremove -y > /dev/null 2>&1;
        sudo apt install toilet lolcat xterm figlet tar neofetch git vim ripgrep curl  python3 python3-pip  wget  nmap xsltproc  htop   p7zip-full  masscan  gdu  hydra  build-essential libpcap-dev libusb-1.0-0-dev libnetfilter-queue-dev   jq  chromium-browser software-properties-common  build-essential  python3-pip curl gnupg lsb-release -y 
        
        #go-install
		echo -e "\033[34m[+]Installing GO.. For $OS \033[m"

        sudo add-apt-repository ppa:longsleep/golang-backports -y
        sudo apt update > /dev/null 2>&1;
        sudo apt install golang-go -y > /dev/null 2>&1;
        


	elif [ "$OS" == "Ubuntu" ]; then
		#Specific Ubuntu
		echo -e "\033[34m[+]Installing dependencies.. For $OS \033[m"

	    sudo apt update  ; sudo apt clean ; sudo apt autoclean ; sudo apt upgrade -y ; sudo apt autoremove -y > /dev/null 2>&1;
        sudo apt install toilet lolcat xterm figlet tar neofetch git vim ripgrep curl  python3 python3-pip  wget  nmap xsltproc  htop   p7zip-full  masscan  gdu  hydra  build-essential libpcap-dev libusb-1.0-0-dev libnetfilter-queue-dev   jq  chromium-browser software-properties-common  build-essential  python3-pip curl gnupg lsb-release -y 
        
        #go-install
		echo -e "\033[34m[+]Installing GO.. For $OS \033[m"

        sudo add-apt-repository ppa:longsleep/golang-backports -y
        sudo apt update > /dev/null 2>&1;
        sudo apt install golang-go -y > /dev/null 2>&1;
        
     
	elif [ "$OS" == "Kali" ]; then
		#Specific Kali Linux
		echo -e "\033[34m[+]Installing dependencies.. For $OS \033[m"
 sudo apt update  ; sudo apt clean ; sudo apt autoclean ; sudo apt upgrade -y ; sudo apt autoremove -y 


        sudo apt install toilet lolcat xterm figlet tar neofetch git vim ripgrep curl  python3 python3-pip  wget  nmap xsltproc  htop   p7zip-full  masscan  gdu  hydra  build-essential libpcap-dev libusb-1.0-0-dev libnetfilter-queue-dev   jq  chromium build-essential  python3-pip curl gnupg lsb-release -y 
        
        #go-install
		echo -e "\033[34m[+]Installing GO.. For $OS \033[m"
        sudo apt install golang -y 




	elif [ "$OS" == "Parrot" ]; then
		#Specific Parrot Linux
		echo -e "\033[34m[+]Installing dependencies.. For $OS \033[m"

	    sudo apt update  ; sudo apt clean ; sudo apt autoclean ; sudo apt upgrade -y ; sudo apt autoremove -y > /dev/null 2>&1;

        sudo apt install toilet lolcat xterm figlet tar neofetch git vim ripgrep curl  python3 python3-pip  wget  nmap xsltproc  htop   p7zip-full  masscan  gdu  hydra  build-essential libpcap-dev libusb-1.0-0-dev libnetfilter-queue-dev   jq  chromium build-essential  python3-pip -y > /dev/null 2>&1;
        
        #go-install
		echo -e "\033[34m[+]Installing GO.. For $OS \033[m"
        sudo apt install golang -y > /dev/null 2>&1;

            
	else
        	echo -e ${RED}"[+]OS unrecognized. Please check the compatibility with your system.";
        	echo -e ${RED}"[+]End of the script";
        exit;
	fi


}
Installing_dependencies

sleep 2

#installing-tools
tools(){

mkdir -p ~/tools
cd ~/tools

echo -e "\033[33m[+]Installing...Tools \033[m";
sleep 2

curl -LO https://github.com/findomain/findomain/releases/latest/download/findomain-linux.zip
unzip findomain*
sudo chmod +x findomain
sudo mv findomain /usr/bin/findomain
sudo rm findomain*

curl -LO https://github.com/michenriksen/aquatone/releases/download/v1.7.0/aquatone_linux_amd64_1.7.0.zip
unzip aquatone*
sudo chmod +x aquatone
sudo mv aquatone /usr/bin/aquatone
sudo rm  LICENSE.txt  README.md aquatone*


echo -e "\033[36m[+]nmap-vulners Updating...\033[m" 
chmod +rwx /usr/share/nmap/scripts/
sudo rm  vulners.nse* 
sudo rm  /usr/share/nmap/scripts/vulners.nse* 
sudo wget https://raw.githubusercontent.com/vulnersCom/nmap-vulners/master/vulners.nse ;sudo mv vulners.nse /usr/share/nmap/scripts/ 



#xss-tools
git clone https://github.com/devanshbatham/paramspider
