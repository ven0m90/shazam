xterm -e pip install git+https://github.com/sanjai-AK47/ShodanX
xterm -e pip install appdirs
xterm -e pip install alive_progress


#go-tools


echo -e "\033[36m[+]Installing... Go-Tools  \033[m";
go install -v github.com/projectdiscovery/notify/cmd/notify@latest
